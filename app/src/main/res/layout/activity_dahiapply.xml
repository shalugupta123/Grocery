<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/msgbox"
    android:background="@color/white" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/dahikadiba" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/dahi"
            />
        <TextView
            android:id="@+id/tvmama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_dahi"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/dahikadiba"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvdoz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvmama"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/join_dahidoz"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/dahikadiba"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <TextView
            android:id="@+id/tvcost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvdoz"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/join_dahicost"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/dahikadiba"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        ><ImageView 
            android:id="@+id/imv_mins"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:contentDescription="@string/app_name"
          android:src="@drawable/mainus"  />
        <TextView
            android:id="@+id/tvcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/quantity_number_bg"
            
            />
        <ImageView 
            android:id="@+id/imv_plus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:contentDescription="@string/app_name"
          android:src="@drawable/plus"  />
        <ImageView 
            android:id="@+id/imv_apply"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:contentDescription="@string/app_name"
          android:src="@drawable/apply"
          android:layout_marginLeft="30dp"
            />
    </LinearLayout>

</LinearLayout>
