<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    xmlns:pax="http://schemas.android.com/apk/res/com.alobha.grocery"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/black"
        android:gravity="center_horizontal">
        
        <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"      
        android:background="@drawable/active_star"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSearchHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/search_bg"
        android:orientation="horizontal" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_field"
            android:drawableLeft="@drawable/search_icon"
            android:gravity="center_vertical"
            android:hint="@string/seach"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="8"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:inputType="text"
            android:maxLength="50"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/ivbtnScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginRight="10dp"
            android:background="@drawable/scan_button"
            android:contentDescription="@+id/Groceryitembg" />
    </LinearLayout>
<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/advrt2"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
           	android:text="@string/welcome"
           	android:layout_marginBottom="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelBrowseStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/white_border_yello_bg_ract" >
        
        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:padding="10dp"
            android:src="@drawable/orange_arrow" 
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/tv_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:text="@string/browse"
            android:textColor="@color/browse1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_favrote"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_height="wrap_content"
        android:text="@string/favrote"/>
 <RelativeLayout
        android:id="@+id/RlGroceryFaverties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="1sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_border_yello_bg_ract" >
        
        <ImageView
            android:id="@+id/img_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:padding="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/orange_arrow" />

        <TextView
            android:id="@+id/tv_grocery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/grocery"
            android:textColor="@color/browse1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

    </RelativeLayout>

 
        
        <android.support.v4.view.ViewPager
         android:id="@+id/view"
         android:layout_height="180dp"
         android:layout_width="match_parent"   />
 
<TextView
        android:id="@+id/tv_listfavrote"
        android:layout_width="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="@string/favrote"/>
<ListView
        android:id="@+id/lVDeals"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:divider="@null"
        android:cacheColorHint="@color/transparent"
        >
    </ListView>


        
        <ImageView
            android:id="@+id/imgff_arrow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/home_screen" 
            android:contentDescription="@string/app_name"/>

       

<ImageView
            android:id="@+id/truck_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/truck_img2"
             android:contentDescription="@string/app_name"/>

</LinearLayout>

    
</ScrollView>
<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"> 
       <com.alobha.grocery.tab.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            pax:tab_id="icontab"/>
       </RelativeLayout>
</LinearLayout>